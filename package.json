    "typegen": "sanity schema extract --path=./src/sanity/extract.json && sanity typegen generate"
  },
  "dependencies": {
    "@sanity/code-input": "^6.0.1",
    "@sanity/icons": "^3.7.3",
    "@sanity/image-url": "^1.2.0",
    "@sanity/vision": "^4.10.3",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "dayjs": "^1.11.18",
    "highlight.js": "^11.11.1",
    "next": "15.5.5",
    "next-sanity": "^11.4.2",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "sanity": "^4.10.3",
    "schema-dts": "^1.1.5",
    "styled-components": "^6.1.19",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@github/copilot": "^0.0.340",
    "@next/env": "^15.5.5",
    "@next/eslint-plugin-next": "^15.5.5",
    "@playwright/test": "^1.56.0",
    "@sanity/client": "^7.12.0",
    "@tailwindcss/postcss": "^4",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^24",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "eslint": "^9",
    "eslint-config-next": "15.5.5",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "6.1.0",
    "nx": "21.6.5",
    "prettier": "^3.6.0",
    "prettier-plugin-tailwindcss": "^0.7.0",
    "sort-package-json": "^3.4.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "packageManager": "pnpm@10.17.1",
  "nx": {
    "metadata": {
      "description": "A blog built with Next.js and Sanity.io"
    }
  }
