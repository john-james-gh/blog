{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prebuild": "pnpm typegen",
    "build": "next build --turbopack",
    "predev": "pnpm typegen",
    "dev": "next dev --turbopack",
    "format": "prettier --write . && sort-package-json",
    "lint": "eslint",
    "start": "next start",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:update": "playwright test --update-snapshots",
    "typegen": "sanity schema extract --path=./src/sanity/extract.json && sanity typegen generate"
  },
  "dependencies": {
    "@sanity/code-input": "^6.0.3",
    "@sanity/icons": "^3.7.3",
    "@sanity/image-url": "^2.0.2",
    "@sanity/vision": "^4.21.0",
    "@sentry/nextjs": "^10.30.0",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "dataloader": "^2.2.3",
    "dayjs": "^1.11.19",
    "highlight.js": "^11.11.1",
    "import-in-the-middle": "2.0.0",
    "next": "16.0.9",
    "next-sanity": "^11.6.10",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "require-in-the-middle": "8.0.1",
    "sanity": "^4.21.0",
    "schema-dts": "^1.1.5",
    "styled-components": "^6.1.19",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@github/copilot": "^0.0.367",
    "@next/env": "^16.0.7",
    "@next/eslint-plugin-next": "^16.0.7",
    "@playwright/test": "^1.57.0",
    "@sanity/client": "^7.13.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/node": "^25.0.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.1",
    "eslint-config-next": "16.0.8",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "6.1.0",
    "nx": "22.2.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "sort-package-json": "^3.5.1",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.17.1",
  "nx": {
    "metadata": {
      "description": "A blog built with Next.js and Sanity.io"
    }
  },
  "pnpm": {
    "overrides": {
      "valibot": "1.2.0",
      "glob": "10.5.0",
      "js-yaml": "3.14.2"
    }
  }
}
