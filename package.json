{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prebuild": "pnpm typegen",
    "build": "next build",
    "predev": "pnpm typegen",
    "dev": "next dev --turbopack",
    "format": "prettier --write . && sort-package-json",
    "lint": "eslint",
    "start": "next start",
